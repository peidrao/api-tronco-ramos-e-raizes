{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": [
    "standard",
    "prettier/prettier",
    "plugin:@typescript-eslint/recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "prettier"],
  "rules": {
    "camelcase": "off",
    "space-before-function-paren": "off"
  },
  "settings": {
    "import/resolver": {
      "typescript": {}
    }
  }
}
